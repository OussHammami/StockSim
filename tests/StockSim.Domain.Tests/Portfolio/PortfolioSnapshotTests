namespace StockSim.Domain.Tests.Portfolio;

public class PortfolioSnapshotTests
{
    [Fact]
    public void Equity_equals_cash_plus_market_value()
    {
        var snap = new PortfolioSnapshot
        {
            Cash = 12_345.67m,
            MarketValue = 4_321.00m
        };

        snap.Equity.Should().Be(12_345.67m + 4_321.00m);
    }
}