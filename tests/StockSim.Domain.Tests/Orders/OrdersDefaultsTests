namespace StockSim.Domain.Tests.Orders;

public class OrderDefaultsTests
{
    [Fact]
    public void New_order_has_expected_defaults()
    {
        var o = new Order();

        o.Type.Should().Be(OrderType.Market);
        o.Symbol.Should().Be("");
        o.Quantity.Should().Be(0);
        o.FillPrice.Should().BeNull();
        o.FilledUtc.Should().BeNull();
        o.LimitPrice.Should().BeNull();
        o.StopPrice.Should().BeNull();
        o.Remaining.Should().Be(0);
    }
}